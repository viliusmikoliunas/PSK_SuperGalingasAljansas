{
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["import"],
  "rules": {
    "linebreak-style": [ "warn", "windows" ],
    "comma-dangle": ["error", "never"],
    "global-require": "off",
    "react/prop-types": "off",
    "prefer-const": ["warn"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  }
}